
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2 mainimg">
     <div class="bss-slides num1">
        <figure class="image" >
            <img src="<%= @images.image1.url %>" width="100%" />
        </figure>
         <figure class="image" >
            <img src="<%= @images.image2.url %>" width="100%" />
        </figure>
         <figure class="image" >
            <img src="<%= @images.image3.url %>" width="100%" />
        </figure>
         <figure class="image" >
            <img src="<%= @images.image4.url %>" width="100%" />
        </figure>
      </div>
    </div>
    <div class="col-md-4">
      <p><%= @product.name %></p>

      <h3>description</h3>
      <p><%= @product.description %></p>

      <h3>price</h3>
