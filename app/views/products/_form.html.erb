<%= form_for @product do |f| %>

  <% if @product.errors.any? %>
  <div class="container">
    <div id="error_explanation" class="alert alert-danger alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <p>
        <strong>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this article from being saved:
        </strong>
      </p>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    </div>
  <% end %>


<div class="container">
  <div class="form-group row">
    <div class="col-md-5">
      <%= f.text_field :name, class: "form-control",
        placeholder: "name" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-5">
      <%= f.text_area :description, class: "form-control",
      placeholder: "description", rows: "5" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-md-2">
      <%= f.number_field :price, class: "form-control",
        placeholder: "price in pennies" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-1">
      <%= f.label :ring %>
      <%= f.check_box :ring, class: "checkbox" %>
    </div>
    <div class="col-md-1">
      <%= f.label :earring %>
      <%= f.check_box :earring, class: "checkbox" %>
    </div>
    <div class="col-md-1">
      <%= f.label :necklace %>
      <%= f.check_box :necklace, class: "checkbox" %>
    </div>
    <div class="col-md-1">
      <%= f.label :bracelet %>
      <%= f.check_box :bracelet, class: "checkbox" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-md-2">
    <%= f.number_field :quantity, class: "form-control",
    placeholder: "quantity" %>
  </div>
  </div>

  <%= f.hidden_field :active, value: true %>

  <div class="row">
    <div class="col-md-4">
    <%= f.submit "submit", class: "btn btn-primary-outline" %>
  </div>
  </div>
</div>
<% end %>
