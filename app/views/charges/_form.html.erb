<% if @order_items.size == 0 %>
  <% else %>
<%= form_for @charge do |f| %>

  <% if @charge.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@charge.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @charge.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :order_id, value: current_order.id %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :card_token %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :address1 %>
  <%= f.hidden_field :address2 %>
  <%= f.hidden_field :city %>
  <%= f.hidden_field :state %>
  <%= f.hidden_field :zip %>
  <%= f.hidden_field :country %>

<div class="row">
  <br>
  <div class="col-md-offset-9 col-md-2 col-xs-12">
    <button class="btn btn-secondary sharp blk pull-xs-right" id="customButton">Checkout</button>
  </div>
</div>

<script>
  var handler = StripeCheckout.configure({
    key: '<%= Rails.configuration.stripe[:publishable_key] %>',
    image: 'https://stripe.com/img/documentation/checkout/marketplace.png',
    locale: 'auto',
    token: function(token, args) {
      $("[name='charge[email]").val(token.email);
      $("[name='charge[card_token]").val(token.id);
      $("[name='charge[name]").val(args.shipping_name);
      $("[name='charge[address1]").val(args.shipping_address_line1);
      $("[name='charge[address2]").val(args.shipping_address_line2);
      $("[name='charge[city]").val(args.shipping_address_city);
      $("[name='charge[state]").val(args.shipping_address_state);
      $("[name='charge[zip]").val(args.shipping_address_zip);
      $("[name='charge[country]").val(args.shipping_address_country);
      $("#new_charge").submit();
    }
  });

  $('#customButton').on('click', function(e) {
    // Open Checkout with further options
    handler.open({
      name: 'Marketplace',
      description: 'testing',
      amount: <%= current_order.total %>,
      billingAdress: "true",
      shippingAddress: "true"
    });
    e.preventDefault();
  });

  // Close Checkout on page navigation
  $(window).on('popstate', function() {
    handler.close();
  });
</script>

<% end %>
<% end %>

