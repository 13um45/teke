<div class="well">
  <div class="row">
  <%= form_for order_item, remote: true do |f| %>
    <div class="col-xs-8 col-md-2">
      <h6><%= link_to product.name, product %></h6>
    </div>
    <div class="col-xs-4 col-md-2">
      <h6>
        Unit Price: <%= number_to_currency order_item.formatted_unit_price %>
      </h6>
    </div>
    <div class="col-xs-4 col-md-1">
      <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
      <%= f.hidden_field :product_id, value: product.id %>
    </div>
    <div class="col-md-3">
      <h6>
        Total Price: <%= number_to_currency order_item.formatted_total_price %>
      </h6>
    </div>
    <div class="col-xs-8 col-md-4">
      <div class="btn-group">
        <%= f.submit "Update Quantity", class: "btn btn-sm btn-primary" %>
        <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-sm btn-danger" } %>

      </div>
    </div>
  </div>
   <% end %>
</div>
